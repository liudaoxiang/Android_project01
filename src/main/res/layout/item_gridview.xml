<?xml version="1.0" encoding="utf-8"?>
<com.atguigu.musicplay.listener.PopuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:background="@drawable/pop_menu_bg"
    >
        <TextView
            android:id="@+id/newcreat"
            android:gravity="center"
            android:drawableTop="@drawable/ic_menu_create_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" 新建列表"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/seting"
            android:gravity="center"
            android:drawableTop="@drawable/ic_menu_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="设置"/>
        <TextView
            android:id="@+id/updata"
            android:gravity="center"
            android:drawableTop="@drawable/ic_menu_help_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="版本信息"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/exit"
            android:gravity="center"
            android:drawableTop="@drawable/ic_menu_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="退出"/>
</com.atguigu.musicplay.listener.PopuView>